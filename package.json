{
  "name": "my-daily-blog",
  "version": "1.0.0",
  "description": "Daily events blog built with Hono SSG",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./app/style.css -o ./public/css/style.css --watch\" \"vite\"",
    "build:css": "npx tailwindcss -i ./app/style.css -o ./public/css/style.css --minify",
    "build": "npm run build:css && npm run build:ssg && npm run generate:pages",
    "build:ssg": "vite build",
    "generate:pages": "npx tsx scripts/generate-pages.ts",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "honox": "^0.1.28",
    "gray-matter": "^4.0.3",
    "fs-extra": "^11.2.0",
    "@mdx-js/mdx": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/fs-extra": "^11.0.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "@hono/vite-dev-server": "^0.12.0",
    "@hono/vite-ssg": "^0.1.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "concurrently": "^8.2.0"
  }
}